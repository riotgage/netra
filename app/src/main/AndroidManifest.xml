<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vitpunerobotics.netra">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="Netra"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.vitpunerobotics.netra.activities.SplashScreenActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.vitpunerobotics.netra.activities.VoiceControlActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.vitpunerobotics.netra.activities.ManualControlActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.vitpunerobotics.netra.activities.FaceTrackerActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.vitpunerobotics.netra.activities.ColorDetectionActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.vitpunerobotics.netra.activities.OCRActivity"
            android:label="@string/title_activity_ocr_act"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.vitpunerobotics.netra.activities.HomeActivity"
            android:label="@string/demo"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.vitpunerobotics.netra.activities.Move_dist"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.vitpunerobotics.netra.activities.Main3Activity"
            android:label="@string/title_activity_main3"
            android:screenOrientation="fullSensor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.vitpunerobotics.netra.activities.BluetoothActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>